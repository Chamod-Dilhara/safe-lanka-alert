<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"
    android:background="@android:color/white">

    <!-- Warning Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš¨"
        android:textSize="80sp"
        android:layout_marginBottom="20dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMERGENCY SOS"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use only in life-threatening emergencies"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Countdown Display -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="30dp" />

    <!-- SOS Button -->
    <Button
        android:id="@+id/btnSOS"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="PRESS FOR SOS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CANCEL EMERGENCY"
        android:textSize="16sp"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <!-- Emergency Contacts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Police\n119"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white"
            android:onClick="callPolice"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ambulance\n110"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:onClick="callAmbulance"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DMC\n117"
            android:backgroundTint="#388E3C"
            android:textColor="@android:color/white"
            android:onClick="callDmc"
            android:layout_margin="5dp" />
    </LinearLayout>

</LinearLayout>