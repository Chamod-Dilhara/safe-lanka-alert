<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with Sri Lankan Colors -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1B5E20"
        android:padding="20dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safe Lanka Alert"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="à¶¯à·’à¶»à·’à¶º à¶‡à¶½à¶§à·Š"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:alpha="0.9" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Safe"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="#FF8C00" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- District Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E8F5E9"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ à¶¯à·’à·ƒà·Šà¶­à·Šâ€à¶»à·’à¶šà·Šà¶šà¶º:"
                    android:textColor="#1B5E20"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/districtSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/tvAlertTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="âš ï¸ Alert Warning"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/tvAlertTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: 14:30"
                            android:textSize="12sp"
                            android:textColor="#757575" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAlertMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Heavy rain warning - Colombo District\nBe prepared and monitor conditions."
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:id="@+id/viewAlertIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="#FF8C00"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvAlertSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Source: DMC"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="32dp">

                <!-- ðŸ†˜ SOS Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSOS"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#D32F2F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ†˜ SOS"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- âœ… I'm Safe Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSafe"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#388E3C">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ… I'm Safe"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸš¨ Call Police -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEmergency"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#1976D2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš¨ Police"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸ“‹ Checklist -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChecklist"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#1B5E20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“‹ Checklist"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸ“– Guide -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGuide"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FF6F00">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“– Guide"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸ¥ Ambulance -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F44336"
                    android:onClick="testSOS">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥ Ambulance"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnDmc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DMC - 117"
                    android:backgroundTint="#1B5E20"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnPolice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Police - 119"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnSubhasadaka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subhasadaka - 1990"
                    android:backgroundTint="#FF6F00"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnRailway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Railway - 112"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Test Button (Optional - Remove in production) -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Alert"
                android:onClick="simulateAlert"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#757575"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>